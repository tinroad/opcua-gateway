{
	"name": "opc-gateway",
	"version": "1.0.0",
	"description": "Gateway for communication with OPC UA servers",
	"main": "src/server.js",
	"scripts": {
		"prepare": "husky",
		"start": "node src/app.js",
		"dev": "nodemon src/app.js",
		"test": "jest --forceExit --detectOpenHandles",
		"test:unit": "jest --testPathPattern=__tests__/utils --forceExit --detectOpenHandles",
		"test:integration": "jest --testPathPattern=__tests__/integration --forceExit --detectOpenHandles",
		"test:performance": "jest --testPathPattern=__tests__/performance --forceExit --detectOpenHandles",
		"test:snmp": "jest --testPathPattern=__tests__/.*snmp.*\\.test\\.js --forceExit --detectOpenHandles",
		"test:watch": "jest --watch",
		"test:coverage": "jest --coverage --forceExit --detectOpenHandles",
		"docker:build": "docker build -t opc-gateway .",
		"docker:run": "docker run -p 3000:3000 --env-file .env opc-gateway",
		"docker:compose": "docker-compose up -d",
		"lint": "eslint .",
		"lint:fix": "eslint . --fix",
		"commitlint": "commitlint --edit",
		"generate:zabbix": "node src/tools/generateZabbixTemplate.js"
	},
	"dependencies": {
		"cors": "^2.8.5",
		"dotenv": "^16.0.3",
		"express": "^4.18.2",
		"express-rate-limit": "^7.5.0",
		"express-validator": "^7.2.1",
		"helmet": "^8.1.0",
		"morgan": "^1.10.0",
		"net-snmp": "^3.20.0",
		"node-opcua": "^2.85.0",
		"os-utils": "^0.0.14",
		"serve-index": "^1.9.1",
		"snmp-native": "^1.2.0",
		"winston": "^3.8.2"
	},
	"devDependencies": {
		"@commitlint/cli": "^19.0.3",
		"@commitlint/config-conventional": "^19.0.3",
		"axios": "^1.8.4",
		"husky": "^9.1.7",
		"jest": "^29.7.0",
		"nodemon": "^3.1.9",
		"supertest": "^6.3.4"
	},
	"engines": {
		"node": ">=14.0.0"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/tinroad/opcua-gateway.git"
	},
	"keywords": [
		"opc-ua",
		"gateway",
		"iot",
		"industrial",
		"automation",
		"protocol"
	],
	"author": "Diego Morales",
	"license": "MIT"
}
